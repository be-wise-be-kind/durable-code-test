{
  "_header": {
    "purpose": "Infrastructure USE method dashboard for monitoring Utilization, Saturation, and Errors of compute resources",
    "scope": "EC2 and container infrastructure metrics using standard node_exporter and cAdvisor metric names",
    "overview": "Implements the USE (Utilization, Saturation, Errors) method for infrastructure monitoring. Uses node_exporter (node_*) and cAdvisor (container_*) metrics scraped by Alloy every 30 seconds and stored in Mimir. Both exporters run in the Docker Compose stack alongside the observability services.",
    "dependencies": "Mimir datasource (uid: mimir), node_exporter metrics (node_*), cAdvisor metrics (container_*)",
    "exports": "Provisioned Grafana dashboard accessible at /grafana/d/obs-use",
    "interfaces": "PromQL queries against standard node_exporter and cAdvisor metric names",
    "environment": "Identical across dev/staging/prod; metrics populate when exporters are deployed",
    "related": "obs-summary.json for overview, obs-saturation.json for quick saturation view",
    "implementation": "Grafana dashboard JSON schema version 39 with pre-built queries for standard infrastructure metrics"
  },
  "uid": "obs-use",
  "title": "USE",
  "description": "Utilization, Saturation, Errors for compute infrastructure",
  "tags": ["observability"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "editable": false,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "links": [
    {
      "title": "Home",
      "url": "/grafana/d/home",
      "type": "link",
      "icon": "home",
      "keepTime": true,
      "includeVars": false
    },
    {
      "title": "Summary",
      "url": "/grafana/d/obs-summary",
      "type": "link",
      "icon": "dashboard",
      "keepTime": true,
      "includeVars": true
    },
    {
      "title": "Observability Dashboards",
      "type": "dashboards",
      "tags": ["observability"],
      "asDropdown": true,
      "keepTime": true,
      "includeVars": true
    }
  ],
  "panels": [
    {
      "type": "text",
      "title": "Data Availability",
      "gridPos": { "h": 3, "w": 24, "x": 0, "y": 0 },
      "id": 1,
      "options": {
        "mode": "markdown",
        "content": "### Infrastructure Metrics Status\nThis dashboard uses **node_exporter** (`node_*`) and **cAdvisor** (`container_*`) metrics scraped by Alloy. Metrics refresh every 30 seconds."
      }
    },
    {
      "type": "row",
      "title": "CPU Utilization",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 3 },
      "id": 2,
      "collapsed": false
    },
    {
      "type": "timeseries",
      "title": "CPU Utilization %",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "id": 3,
      "datasource": { "type": "prometheus", "uid": "mimir" },
      "targets": [
        {
          "expr": "100 - (avg(rate(node_cpu_seconds_total{mode=\"idle\"}[$__rate_interval])) * 100)",
          "legendFormat": "CPU Usage %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 20
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 85 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "single" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      }
    },
    {
      "type": "timeseries",
      "title": "Container CPU Usage",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "id": 4,
      "datasource": { "type": "prometheus", "uid": "mimir" },
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{name!=\"\"}[$__rate_interval])) by (name) * 100",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "right", "calcs": ["mean", "max"] }
      }
    },
    {
      "type": "row",
      "title": "Memory Utilization",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 12 },
      "id": 5,
      "collapsed": false
    },
    {
      "type": "timeseries",
      "title": "Memory Utilization %",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 13 },
      "id": 6,
      "datasource": { "type": "prometheus", "uid": "mimir" },
      "targets": [
        {
          "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
          "legendFormat": "Memory Usage %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 20
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 85 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "single" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      }
    },
    {
      "type": "timeseries",
      "title": "Container Memory Usage",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 13 },
      "id": 7,
      "datasource": { "type": "prometheus", "uid": "mimir" },
      "targets": [
        {
          "expr": "sum(container_memory_usage_bytes{name!=\"\"}) by (name)",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "right", "calcs": ["mean", "max"] }
      }
    },
    {
      "type": "row",
      "title": "Disk & Network",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 21 },
      "id": 8,
      "collapsed": false
    },
    {
      "type": "timeseries",
      "title": "Disk Utilization %",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 22 },
      "id": 9,
      "datasource": { "type": "prometheus", "uid": "mimir" },
      "targets": [
        {
          "expr": "(1 - (node_filesystem_avail_bytes{mountpoint=\"/\"} / node_filesystem_size_bytes{mountpoint=\"/\"})) * 100",
          "legendFormat": "Disk Usage %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 20
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 90 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "single" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      }
    },
    {
      "type": "timeseries",
      "title": "Network I/O",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 22 },
      "id": 10,
      "datasource": { "type": "prometheus", "uid": "mimir" },
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total{device!=\"lo\"}[$__rate_interval])",
          "legendFormat": "Receive {{device}}",
          "refId": "A"
        },
        {
          "expr": "rate(node_network_transmit_bytes_total{device!=\"lo\"}[$__rate_interval])",
          "legendFormat": "Transmit {{device}}",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "right", "calcs": ["mean", "max"] }
      }
    },
    {
      "type": "row",
      "title": "Saturation & Errors",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 30 },
      "id": 11,
      "collapsed": false
    },
    {
      "type": "timeseries",
      "title": "CPU Saturation (Load Average)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 31 },
      "id": 12,
      "datasource": { "type": "prometheus", "uid": "mimir" },
      "targets": [
        {
          "expr": "node_load1",
          "legendFormat": "1m load",
          "refId": "A"
        },
        {
          "expr": "node_load5",
          "legendFormat": "5m load",
          "refId": "B"
        },
        {
          "expr": "node_load15",
          "legendFormat": "15m load",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      }
    },
    {
      "type": "timeseries",
      "title": "Disk I/O Saturation",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 31 },
      "id": 13,
      "datasource": { "type": "prometheus", "uid": "mimir" },
      "targets": [
        {
          "expr": "rate(node_disk_io_time_seconds_total[$__rate_interval])",
          "legendFormat": "{{device}} IO time",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.7 },
              { "color": "red", "value": 0.9 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      }
    }
  ],
  "time": { "from": "now-1h", "to": "now" },
  "refresh": "30s",
  "templating": { "list": [] }
}

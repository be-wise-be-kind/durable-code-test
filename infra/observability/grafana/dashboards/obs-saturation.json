{
  "_header": {
    "purpose": "Observability stack saturation dashboard showing EC2 CPU, memory, and load metrics from node-exporter",
    "scope": "EC2 instance resource utilization for the observability stack using node_exporter metrics",
    "overview": "Extracts the Saturation - Observability Stack (EC2) row from the golden signals overview into a dedicated detail dashboard. Displays EC2 CPU utilization, memory utilization from node-exporter, and stat panels for CPU %, Memory %, and load average. Enables focused investigation of observability infrastructure saturation.",
    "dependencies": "Mimir datasource (uid: mimir), node_exporter metrics (node_cpu_seconds_total, node_memory_MemAvailable_bytes, node_memory_MemTotal_bytes, node_load1)",
    "exports": "Provisioned Grafana dashboard accessible at /grafana/d/obs-saturation",
    "interfaces": "PromQL queries against node_exporter metric names",
    "environment": "Identical across dev/staging/prod",
    "related": "obs-summary.json for overview, obs-use.json for full USE method analysis",
    "implementation": "Grafana dashboard JSON schema version 39 with time series and stat panels for node-exporter metrics"
  },
  "uid": "obs-saturation",
  "title": "Saturation",
  "description": "EC2 CPU, memory utilization, and load average for the observability stack",
  "tags": ["observability"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "editable": false,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "links": [
    {
      "title": "Home",
      "url": "/grafana/d/home",
      "type": "link",
      "icon": "home",
      "keepTime": true,
      "includeVars": false
    },
    {
      "title": "Summary",
      "url": "/grafana/d/obs-summary",
      "type": "link",
      "icon": "dashboard",
      "keepTime": true,
      "includeVars": true
    },
    {
      "title": "Observability Dashboards",
      "type": "dashboards",
      "tags": ["observability"],
      "asDropdown": true,
      "keepTime": true,
      "includeVars": true
    }
  ],
  "panels": [
    {
      "type": "timeseries",
      "title": "EC2 CPU Utilization",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "id": 1,
      "datasource": { "type": "prometheus", "uid": "mimir" },
      "targets": [
        {
          "expr": "1 - avg(rate(node_cpu_seconds_total{mode=\"idle\"}[$__rate_interval]))",
          "legendFormat": "CPU utilization",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 20
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.7 },
              { "color": "red", "value": 0.9 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "single" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      }
    },
    {
      "type": "timeseries",
      "title": "EC2 Memory Utilization",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "id": 2,
      "datasource": { "type": "prometheus", "uid": "mimir" },
      "targets": [
        {
          "expr": "1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)",
          "legendFormat": "Memory utilization",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 20
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.7 },
              { "color": "red", "value": 0.9 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "single" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      }
    },
    {
      "type": "stat",
      "title": "CPU %",
      "gridPos": { "h": 4, "w": 8, "x": 0, "y": 8 },
      "id": 3,
      "datasource": { "type": "prometheus", "uid": "mimir" },
      "targets": [
        {
          "expr": "1 - avg(rate(node_cpu_seconds_total{mode=\"idle\"}[$__rate_interval]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.7 },
              { "color": "red", "value": 0.9 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "background",
        "graphMode": "none"
      }
    },
    {
      "type": "stat",
      "title": "Memory %",
      "gridPos": { "h": 4, "w": 8, "x": 8, "y": 8 },
      "id": 4,
      "datasource": { "type": "prometheus", "uid": "mimir" },
      "targets": [
        {
          "expr": "1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.7 },
              { "color": "red", "value": 0.9 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "background",
        "graphMode": "none"
      }
    },
    {
      "type": "stat",
      "title": "Load Average (1m)",
      "gridPos": { "h": 4, "w": 8, "x": 16, "y": 8 },
      "id": 5,
      "datasource": { "type": "prometheus", "uid": "mimir" },
      "targets": [
        {
          "expr": "node_load1",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 2 },
              { "color": "red", "value": 4 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "background",
        "graphMode": "area"
      }
    }
  ],
  "time": { "from": "now-1h", "to": "now" },
  "refresh": "30s",
  "templating": { "list": [] }
}

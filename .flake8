[flake8]
max-line-length = 120
extend-ignore = E203, E501, W503, D212, D415, D205, D400, D401, D403, D301, D412, SIM102, SIM110
docstring-convention = google
# Relax docstring rules for file headers and tests
per-file-ignores =
    tests/*:D212,D415,D403,D301
    src/__init__.py:D400,D415
    src/cli.py:D400,D415,D301,D412,D401
    src/config.py:D400,D415
    src/core/base.py:D400,D415
exclude =
    .git,
    __pycache__,
    .venv,
    .pytest_cache,
    htmlcov,
    dist,
    build
